<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    tools:context=".Activity.MainActivity">

    <!-- EditText để nhập tên môn học -->
    <EditText
        android:id="@+id/editText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập tên môn học"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0"
        android:background="@android:drawable/editbox_background"
        android:layout_margin="8dp"/>

    <!-- Button để nhập môn học -->
    <Button
        android:id="@+id/btnNhap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nhập môn học"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText1"
        android:layout_margin="8dp"/>

    <!-- Button để cập nhật danh sách -->
    <Button
        android:id="@+id/btnCapNhat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cập nhật danh sách"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnNhap"
        android:layout_margin="8dp"/>

    <!-- GridView để hiển thị danh sách môn học -->
    <GridView
        android:id="@+id/gridview1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnCapNhat"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
